{% extends 'base.html.twig' %}

{% block title %}Cursos index{% endblock %}

{% block div %}
    <h1>Cursos index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Estado</th>
                <th>Descripcion</th>
                <th>Imagen</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for curso in cursos %}
            <tr>
                <td>{{ curso.id }}</td>
                <td>{{ curso.titulo }}</td>
                <td>{{ curso.estado ? 'Yes' : 'No' }}</td>
                <td>{{ curso.descripcion }}</td>
                <td>{{ curso.imagen }}</td>
                <td>
                    <a href="{{ path('app_cursos_show', {'id': curso.id}) }}">show</a>
                    <a href="{{ path('app_cursos_edit', {'id': curso.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_cursos_new') }}">Create new</a>
{% endblock %}
