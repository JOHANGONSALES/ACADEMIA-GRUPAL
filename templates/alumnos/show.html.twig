{% extends 'base.html.twig' %}

{% block title %}Alumnos{% endblock %}

{% block div %}
    <section class="section" id="about">
        <div class="container">
            <h1>Alumnos</h1>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Nombre</th>
                        <td>{{ alumno.nombre }}</td>
                    </tr>
                    <tr>
                        <th>Primer apellido</th>
                        <td>{{ alumno.primerApellido }}</td>
                    </tr>
                    <tr>
                        <th>Segundo apellido</th>
                        <td>{{ alumno.segundoApellido }}</td>
                    </tr>
                    <tr>
                        <th>Fecha nacimiento</th>
                        <td>{{ alumno.fechaNacimiento ? alumno.fechaNacimiento|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Domicilio</th>
                        <td>{{ alumno.domicilio }}</td>
                    </tr>
                    <tr>
                        <th>Poblacion</th>
                        <td>{{ alumno.poblacion }}</td>
                    </tr>
                    <tr>
                        <th>Codigo postal</th>
                        <td>{{ alumno.codigoPostal }}</td>
                    </tr>
                    <tr>
                        <th>Tel√©fono</th>
                        <td>{{ alumno.telefono }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ alumno.email }}</td>
                    </tr>
                </tbody>
            </table>
            
            <a href="{{ path('app_alumnos_edit', {'id': alumno.id}) }}" class="btn btn-outline-primary" style="font-weight: 600; margin-bottom: 10px; width: 85px;">Edit</a>
            {{ include('alumnos/_delete_form.html.twig') }}
            <div style="margin-top: 20px;">
                <a href="{{ path('app_alumnos_index') }}" >Back to list</a>
            </div>
        </div>
    </section>        

{% endblock %}
